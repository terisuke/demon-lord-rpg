# Grok API (xAI) Configuration
# Get your API key from: https://console.x.ai
XAI_API_KEY=your_grok_api_key_here

# Audio API Configuration (Optional)
# AIVIS Cloud API or alternative
AIVIS_API_KEY=your_aivis_api_key_here

# Server Configuration
PORT=3141
NODE_ENV=development

# Database Configuration
# Default: Local SQLite
DATABASE_URL=file:./.voltagent/memory.db

# For production (Turso):
# DATABASE_URL=libsql://your-database.turso.io
# DATABASE_AUTH_TOKEN=your_auth_token

# Debug Settings
DEBUG=false
LOG_LEVEL=info

# Game Configuration
MAX_DAYS=30
DEFAULT_PLAYER_ROLE=hero
AUTO_SAVE_INTERVAL=300000

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300000
PROMPT_CACHE_ENABLED=true

# VoltOps Configuration (Optional)
# For observability and monitoring
VOLTOPS_API_KEY=your_voltops_key_here
VOLTOPS_ENABLED=false

# Feature Flags
FEATURE_AUDIO_ENABLED=false
FEATURE_IMAGE_GENERATION_ENABLED=true
FEATURE_MULTIPLAYER_ENABLED=false

# Cost Management
MAX_IMAGE_GENERATION_COST=10.00
MAX_DAILY_API_COST=50.00

# Session Configuration
SESSION_TIMEOUT=3600000
MAX_CONCURRENT_SESSIONS=100
